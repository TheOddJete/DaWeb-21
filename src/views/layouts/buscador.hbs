<div class="card-margin card col-11 col-sm-10 col-md-9 col-lg-7 mx-auto p-5">
    <div class="card-title mx-auto titulo-perfil">
        <h2 class="text-center"><i class="fas fa-search fa-sm"> Buscar Pruductos</i></h2>
    </div>
    <hr>
    <form id="formulario-buscador" action="/products/list" method="POST" class="border search-form" novalidate>
        <div class="form-group row mx-auto p-2">
            <input id="texto-buscador" type="text" name="nombre" class="form-control" placeholder="texto"
                maxlength="40">
        </div>
        <div class="form-group row mx-auto p-2">
            <input id="precio_min-buscador" type="number" name="precio_min" min="0"
                class="form-control col-sm-6 col-md-5 col-lg-3 mx-auto" placeholder="precio-min">
            <input id="precio_max-buscador" type="number" name="precio_max" min="0"
                class="form-control col-sm-6 col-md-5 col-lg-3 mx-auto" placeholder="precio_max">
            <select id="estado-buscador" name="estado" class="form-control col-sm-6 col-md-5 col-lg-3 mx-auto">
                <option value="">estado</option>
                <option value="Nuevo">Nuevo</option>
                <option value="SemiNuevo">SemiNuevo</option>
                <option value="Bueno">Bueno</option>
                <option value="Malo">Malo</option>
                <option value="Pocho">Pocho</option>
            </select>
            <select id="categoria-buscador" name="categoria" class="form-control col-sm-6 col-md-5 col-lg-3 mx-auto">
                <option value="">categoria</option>
                <option value="Ropa">Ropa</option>
                <option value="Calzado">Calzado</option>
                <option value="Deportes">Deportes</option>
                <option value="Juegos">Juegos</option>
                <option value="Hogar">Hogar</option>
            </select>
        </div>
        <div class="form-group text-center mx-auto">
            <button id="boton-buscador" type="submit" class="btn btn-success">Buscar <i
                    class="fa fa-search pl-2"></i></button>
        </div>

    </form>
</div>