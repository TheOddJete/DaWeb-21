<div class="container">
    <div class="row ">
        <p class="mx-auto"><i class="fa fa-recycle user-icon "></i></p>
    </div>

    <div class=" row col-sm-10 p-3 mb-2 tarjeta-producto mx-auto ">
        <div class="row col-sm-12">
            <div class="col-sm-4 col-md-3 col-lg-2 mx-auto">
                <div class="imagen-producto">
                    <p> <img src="/images/uploads/{{producto.imagen}}" alt="imagen del producto"
                            class=" rounded-circle img-fluid">
                    </p>
                </div>
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="col-sm-10 mr-auto titulo-precio">
                        <h4>{{product.nombre}}</h4>
                        <p>{{product.descripcion}}</p>
                    </div>
                    <div class="col-sm-2 ml-auto">
                        <h1 class="precio"> <i class="fa fa-dollar-sign"> {{producto.precio}}</i></h1>
                        <h1 class=""></h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="row col-sm-12 mx-auto ">
            <div class=" col-sm-8 mr-auto ">
                <div class="row estado-categoria">
                    <div class=" mx-auto p-2">
                        <p>Estado: {{producto.estado}}</p>
                    </div>
                    <div class=" mx-auto p-2">
                        <p> Categoria: {{producto.categoria}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <h1 class="mt-3"> Mis productos </h1>
    </div>
    <div class="mis-productos-cambio p-1">
        <div class="row ">
            {{#each productos}}
            <div class="col-sm-6">
                <div class="card mb-1 tarjeta-producto">
                    <div class="row ml-auto mr-1">
                        <div class="col-1">
                            <input type="checkbox" name="product_change" value="{{this.id}}" form="form-cambio">
                        </div>
                    </div>
                    <div class="row no-gutters">
                        <div class="col-sm-4 ">
                            <div class="imagen-producto">
                                <p> <img src="/images/uploads/{{this.imagen}}" alt="imagen del producto"
                                        class="m-1 rounded-circle img-fluid">
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-body">
                                <h5 class="card-title">{{this.nombre}}</h5>
                                <p class="card-text"><i class="fa fa-dollar-sign"> {{this.precio}}</i></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="row">
        <form id="form-cambio" action="/cambiar" method="POST" class="mt-2 mx-auto mb-5" novalidate>
            <input type="hidden" name="productId" value="{{producto.id}}">
            <a href="/products/list" class="btn btn-light mr-5">Cancelar</a>
            <button type="submit" class="btn btn-success">Aceptar</button>
        </form>
    </div>

</div>