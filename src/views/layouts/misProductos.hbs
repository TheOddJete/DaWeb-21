<div class="container ">
    <div class="row">
        <div class="mx-auto pt-5 pb-4 ">
            <h2 class="text-center"><i class="fas fa-box fa-sm"> Mis productos</i></h2>
        </div>
    </div>
</div>


<div class="container p-5">
    {{#each productos}}
    <div class=" row col-sm-11 p-3 mb-2 mx-auto border">
        <div class="row col-sm-12">
            <div class="col-sm-4 col-md-3 col-lg-2 mx-auto">
                <p> <img src="/imagenes/{{this.imagen}}" alt="imagen del producto" class="img-fluid">
                </p>
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="col-sm-10 col-md-8 mr-auto">
                        <h4>{{this.nombre}}</h4>
                        <p class="border border-padding">{{this.descripcion}}</p>
                    </div>
                    <div class="col-md-4 mx-auto ml-sm-auto">
                        <h1 class="precio"> <i class="fa fa-dollar-sign"> {{this.precio}}</i></h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="row col-sm-12 mx-auto ">
            <div class=" col-sm-8 mr-auto ">
                <div class="row">
                    <div class=" mx-auto p-2">
                        <p>Estado: {{this.estado}}</p>
                    </div>
                    <div class=" mx-auto p-2">
                        <p> Categoria: {{this.categoria}}</p>
                    </div>
                    <div class="mx-auto p-2">
                        <p> Visualizaciones: {{this.visualizaciones}}</p>
                    </div>
                </div>
            </div>
        </div>
        <form id="borrar-{{this.id}}" action="/misProductos" method="POST">
            <button id="boton-borrar" onclick="return alertaBorrar()"
                class="btn btn-danger btn-block m-1 desabilitable"><i class="fas fa-trash-alt"></i> Borrar</button>
        </form>
    </div>

    <input type="hidden" name="id" value="{{this.id}}" form="borrar-{{this.id}}">

    {{/each}}
</div>