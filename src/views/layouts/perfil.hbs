<div class="card-margin card col-11 col-sm-10 col-md-9 col-lg-7 mx-auto p-5">
    <div class="card-title mx-auto titulo-perfil">
        <h4><i class="fas fa-user user-icon"></i></h4>
        <h4>Mi Perfil</h4>
    </div>
    <hr>
    <form id="formulario-editar-perfil" action="/users/profile" method="POST" class="needs-validation form-perfil"
        novalidate>
        <div class="form-group row">
            <label for="username-editar-perfil" class="col-sm-2">Nombre de Usuario:</label>
            <input id="username-editar-perfil" type="text" name="usuario" class="form-control col-sm-8"
                value="{{{user.username}}}" maxlength="40" required>
        </div>
        <div class="form-group row">
            <label for="nombre-editar-perfil" class="col-sm-2">Nombre:</label>
            <input id="nombre-editar-perfil" type="text" name="nombre" class="form-control col-sm-8"
                value="{{{user.name}}}" maxlength="40" required>
        </div>
        <div class="form-group row">
            <label for="apellidos-editar-perfil" class="col-sm-2">Apellidos:</label>
            <input id="apellidos-editar-perfil" type="text" name="apellidos" class="form-control col-sm-8"
                value="{{{user.apellidos}}}" maxlength="40" required>
            <div class="invalid-feedback">Campos requeridos</div>
        </div>
        <div class="form-group row">
            <label for="contrasena-editar-perfil" class="col-sm-2">Contraseña:</label>
            <input id="contrasena-editar-perfil" type="password" name="contrasena" class="form-control col-sm-3"
                value="{{{user.mail}}}" maxlength="40" required>
            <label for="recontrasena-editar-perfil" class="col-sm-2">Repetir Contraseña:</label>
            <input id="recontrasena-editar-perfil" type="password" name="recontrasena" class="form-control col-sm-3"
                value="{{{user.mail}}}" maxlength="40" required>
            <div class="invalid-feedback">Campo requerido</div>
        </div>
        <div class="form-group row">
            <label for="email-editar-perfil" class="col-sm-2">Email:</label>
            <input id="email-editar-perfil" type="email" name="email" class="form-control col-sm-8"
                value="{{{user.mail}}}" maxlength="40" required>
            <div class="invalid-feedback">Campo requerido</div>
        </div>
        <div class="form-group row">
            <label for="credito-editar-perfil" class="col-sm-2">Crédito:</label>
            <input id="credito-editar-perfil" type="number" name="credito" class="form-control col-sm-3"
                value="{{{user.credito}}}" min="0" required>
            <div class="invalid-feedback">Campos requeridos</div>
        </div>
        <div class="form-group row">
            <label for="provincia-editar-perfil" class="col-sm-2">Provincia:</label>
            <select id="provincia-editar-perfil" name="provincia" class="form-control col-sm-3" required>
                <option value="Madrid">Madrid</option>
                <option value="Barcelona">Barcelona</option>
                <option value="Valencia">Valencia</option>
                <option value="Sevilla">Sevilla</option>
                <option value="Zaragoza">Zaragoza</option>
                <option value="Murcia">Murcia</option>
            </select>
            <div class="invalid-feedback">Campos requeridos</div>
        </div>
        <div class="form-group">
            <button id="boton-editar-perfil" type="submit" class="btn btn-success btn-block">Editar</button>
        </div>
    </form>
</div>