<div class="card-margin card col-11 col-sm-10 col-md-9 col-lg-7 mx-auto p-5">
    <div class="card-title mx-auto">
        <h2 class="text-center"><i class="fa fa-shopping-bag fa-sm"> Registro de Producto</i></h2>
    </div>
    <hr>
    <form action="/registrarProducto" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="form-group row">
            <label for="nombre" class="col-sm-2">Nombre del Producto:</label>
            <input id="nombre" type="text" name="nombre" class="form-control col-sm-10" maxlength="40" required>
            <div class="invalid-feedback mensaje">Campo obligatorio</div>
        </div>
        <div class="form-group row">
            <label for="precio" class="col-sm-2">Precio:</label>
            <input id="precio" type="number" name="precio" class="form-control col-sm-4" min="0" required>
            <label for="categoria" class="col-sm-2">Categoria:</label>
            <select id="categoria" name="categoria" class="form-control col-sm-4" required>
                <option value="" selected disabled></option>
                <option value="Ropa">Ropa</option>
                <option value="Tecnologia">Tecnología</option>
                <option value="Deportes">Deportes</option>
                <option value="Juegos">Juegos</option>
                <option value="Otros">Otros</option>
            </select>
            <div class="invalid-feedback mensaje">Seleccione una categoría</div>
        </div>
        <div class="form-group row">
            <label for="estado" class="col-sm-2">Estado:</label>
            <select id="estado" name="estado" class="form-control col-sm-4" required>
                <option value="" selected disabled></option>
                <option value="Nuevo">Nuevo</option>
                <option value="PocoUso">Poco uso</option>
                <option value="Bueno">Bueno</option>
                <option value="Decente">Decente</option>
                <option value="Malo">Malo</option>
            </select>
            <div class="invalid-feedback mensaje">Seleccione un estado</div>
            <label for="fecha-registrar-producto" class="col-sm-2">Fecha:</label>
            <input id="fecha-registrar-producto" type="date" name="fecha" class="form-control col-sm-4" required>
            <div class="invalid-feedback mensaje">Campo obligatorio</div>
        </div>
        <div class="form-group row">
            <label for="descripcion" class="col-sm-3">Descripción:</label>
            <textarea id="descripcion" name="descripcion" rows="2" required class="form-control col-md-10 ml-auto"
                style="width: 30px;"></textarea>
            <div class="invalid-feedback mensaje">Campo obligatorio</div>
        </div>
        <div class="form-group row">
            <label for="imagen" class="col-sm-2">Imagen:</label>
            <input id="imagen" type="file" name="imagen" class="form-control-file col-sm-8" required>
            <div class="invalid-feedback mensaje">Campo obligatorio</div>
        </div>
        <div class="form-group text-center button-margin">
            <button type="submit" class="btn btn-success">Registrar
                Producto</button>
        </div>
    </form>
</div>